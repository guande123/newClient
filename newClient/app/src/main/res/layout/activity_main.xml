<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gdcp.zgd.newclient.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
             android:id="@+id/toolBar"
            android:layout_width="match_parent"
             android:layout_height="?attr/actionBarSize"
             android:background="@color/colorPrimary"
             app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
             android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:title="title"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </android.support.v4.view.ViewPager>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tab_01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/home_tab_01_selector"
                android:padding="3dp"
                android:text="新闻"
                android:textAlignment="center"
                android:textColor="@color/home_text_selector"/>

            <RadioButton
                android:id="@+id/tab_02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/home_tab_02_selector"
                android:padding="3dp"
                android:text="视听"
                android:textAlignment="center"
                android:textColor="@color/home_text_selector"/>

            <RadioButton
                android:id="@+id/tab_03"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/home_tab_03_selector"
                android:padding="3dp"
                android:text="阅读"
                android:textAlignment="center"
                android:textColor="@color/home_text_selector"/>

            <RadioButton
                android:id="@+id/tab_04"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/home_tab_04_selector"
                android:padding="3dp"
                android:text="发现"
                android:textAlignment="center"
                android:textColor="@color/home_text_selector"/>

            <RadioButton
                android:id="@+id/tab_05"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/home_tab_05_selector"
                android:padding="3dp"
                android:text="设置"
                android:textAlignment="center"
                android:textColor="@color/home_text_selector"/>
        </RadioGroup>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
